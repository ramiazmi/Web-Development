<%- model_class = Criterion -%>
<div class="page-header">
  <h1>المعيار</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>الوصف:</strong></dt>
  <dd><%= @criterion.description %></dd>
  <dt><strong>الفئة:</strong></dt>
  <dd><%= Category.find(@criterion.category_id).description %></dd>
</dl>
<%= link_to "المقاييس",
            criterion_criterion_details_path(@criterion), 
                      :class => 'btn btn-info' %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              criterions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_criterion_path(@criterion), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              criterion_path(@criterion),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

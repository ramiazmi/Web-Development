<div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title" style="text-align: center; font-family: 'Droid Arabic Kufi'; font-size: 18px;">تعديل ملف مستخدم التقييم
        </div>
       
    </div>  
    <div class="panel-body" >

  <%= simple_form_for(@user, url: update_app_user_path(@user), html: { method: :put, :class => "form-horizontal"  }) do |f| %>
    <%= f.error_notification %>


      <div class="form-group">
        <label for="email" class="col-md-3 control-label">البريد الإلكتروني</label>
          <div class="col-md-9">
           <%= f.email_field :email, required: true, autofocus: true, class: "form-control" %>
          </div>
      </div>

      <div class="form-group">
        <label for="user_name" class="col-md-3 control-label">اسم المستخدم</label>
          <div class="col-md-9">
           <%= f.text_field :user_name, required: true, autofocus: true, class: "form-control" %>
          </div>
      </div>


      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>


      <div class="form-group">
          <!-- Button -->                                        
          <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Sign up", value: "حفظ التعديلات", class: "btn btn-info btn-lg", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_users_path, :class => 'btn btn-default btn-lg', style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>   
          </div>
      </div>
    </div>                      
    <% end %>

  </div>

  <div class="panel panel-info">
    <div class="panel-heading">
        <div class="panel-title" style="text-align: center; font-family: 'Droid Arabic Kufi'; font-size: 18px;">Reset User's Password
        </div>
       
    </div>  
    <div class="panel-body" >

  <%= simple_form_for(@user, url:  update_app_user_path(@user), html: { method: :put, :class => "form-horizontal"  }) do |f| %>
    <%= f.error_notification %>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
      <% end %>

      <div class="form-group">
        <label for="user_name" class="col-md-3 control-label">كلمة المرور الجديدة</label>
          <div class="col-md-9">
           <%= f.password_field :password, required: false, autofocus: true, class: "form-control", autocomplete: "off", hint: "leave it blank if you don't want to change it" %>
          </div>
      </div>

      <div class="form-group">
        <label for="user_name" class="col-md-3 control-label">تأكيد كلمة المرور</label>
          <div class="col-md-9">
           <%= f.password_field :password_confirmation, required: false, autofocus: true, class: "form-control", autocomplete: "off", hint: "leave it blank if you don't want to change it" %>
          </div>
      </div>

      <div class="form-group">
        <label for="user_name" class="col-md-3 control-label">كلمة المرور الحالية</label>
          <div class="col-md-9">
           <%= f.password_field :current_password, required: false, autofocus: true, class: "form-control", autocomplete: "off", hint: "leave it blank if you don't want to change it" %>
          </div>
      </div>

      <div class="form-group">
          <!-- Button -->                                        
          <div class="col-md-offset-3 col-md-9">
              <%= f.submit "Sign up", value: "Reset Password", class: "btn btn-danger btn-lg", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>
              <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  admin_users_path, :class => 'btn btn-default btn-lg', style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>   
          </div>
      </div>
      </div>
                                  
    <% end %>

  </div>

               

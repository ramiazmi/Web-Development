<p id="notice"><%= notice %></p>

<h1>Listing Assessment Criterion Details</h1>

<table>
  <thead>
    <tr>
      <th>Mark</th>
      <th>Criterion detail</th>
      <th>Assessment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessment_criterion_details.each do |assessment_criterion_detail| %>
      <tr>
        <td><%= assessment_criterion_detail.mark %></td>
        <td><%= assessment_criterion_detail.criterion_detail_id %></td>
        <td><%= assessment_criterion_detail.assessment_id %></td>
        <td><%= link_to 'Show', assessment_criterion_detail %></td>
        <td><%= link_to 'Edit', edit_assessment_criterion_detail_path(assessment_criterion_detail) %></td>
        <td><%= link_to 'Destroy', assessment_criterion_detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


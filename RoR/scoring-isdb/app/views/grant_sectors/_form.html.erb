<%= simple_form_for @grant_sector, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :percentage %>
  <%= error_span(@grant_sector[:percentage]) %>
  <%= f.input :grant_id %>
  <%= error_span(@grant_sector[:grant_id]) %>
  <%= f.input :sector_id %>
  <%= error_span(@grant_sector[:sector_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                grant_sectors_path, :class => 'btn btn-default' %>
<% end %>

<div class="container">    
        <div id="signupbox" style="margin-top:50px;float:right; font-size: 85%; position: relative; top:-10px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title" style="text-align: center; font-family: 'Droid Arabic Kufi'; font-size: 18px;">إضافة مستخدم تقييم جديد</div>
                           
                        </div>  
                        <div class="panel-body" >
                          <%= simple_form_for(@user, url: create_user_path(resource_name), :html => { :class => "form-horizontal grant" }) do |f| %>
                                
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>
                                      <ul>
                                        <% @user.errors.full_messages.each do |msg| %>
                                          <li><%= msg %></li>
                                        <% end %>
                                      </ul>
                                    </p>
                                    <span></span>
                                </div>

                                <div class="form-group">
                                    <label for="user_name" class="col-md-3 control-label">اسم المستخدم</label>
                                    <div class="col-md-9">
                                        <%= f.text_field :user_name, autofocus: true, class: "form-control", placeholder: "Enter User Full Name", value: "", required: true, style: "text-align: center;" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="email" class="col-md-3 control-label">البريد الإلكتروني</label>
                                    <div class="col-md-9">
                                      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", value: "", required: true, style: "text-align: center;" %>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">كلمة المرور</label>
                                    <div class="col-md-9">
                                      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", 'data-toggle' => "popover", title: "Password Strength", 'data-content' => "Enter Password...", style: "text-align: center;" %>              
                                    </div>
                                </div>
                                    
                                <div class="form-group">
                                    <label for="password_confirmation" class="col-md-3 control-label">تأكيد كلمة المرور</label>
                                    <div class="col-md-9">
                                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password", required: true, style: "text-align: center;"  %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Button -->                                        
                                    <div class="col-md-offset-3 col-md-9">

                                        <%= f.submit "Sign up", value: "حفظ", class: "btn btn-lg btn-info", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>
                                        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                                            admin_users_path, :class => 'btn btn-default', style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>   
                                    </div>
                                </div>
                                <div class="actions">
                                </div>   
                            <% end %>
                         </div>
                    </div>

               
               
                
         </div> 
    </div>
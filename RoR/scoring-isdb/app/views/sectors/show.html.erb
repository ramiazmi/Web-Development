<%- model_class = Sector -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:programme) %>:</strong></dt>
  <dd><%= @sector.programme %></dd>
  <dt><strong><%= model_class.human_attribute_name(:percentage) %>:</strong></dt>
  <dd><%= @sector.percentage %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_active) %>:</strong></dt>
  <dd><%= @sector.is_active %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              sectors_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_sector_path(@sector), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              sector_path(@sector),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

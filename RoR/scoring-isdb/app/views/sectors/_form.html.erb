<%= form_for @sector, :html => { :class => "form-horizontal sector" } do |f| %>

    <% if @sector.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@sector.errors.count, "error") %> prohibited this sector from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @sector.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    اسم القظاع
    <div class="controls">
      <%= f.text_field :programme, :class => 'form-control' %>
    </div>
    <%= error_span(@sector[:programme]) %>
  </div>
  <div class="control-group">
    النسبة الافتراضية
    <div class="controls">
      <%= f.text_field :percentage, :class => 'form-control' %>
    </div>
    <%= error_span(@sector[:percentage]) %>
  </div>
  <% if @sector.persisted? %>
    <div class="control-group">
      <div class="form-group col-xs-12 col-sm-12">
        <%= f.label "فعال", class: 'control-label no-padding-right' %>
          <%= f.check_box :is_active %>
      </div>
      <%= error_span(@sector[:is_active]) %>
    </div>
  <% end %>
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            sectors_path, :class => 'btn btn-default' %>
<% end %>
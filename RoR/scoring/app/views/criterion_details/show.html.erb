<%- model_class = CriterionDetail -%>
<div class="page-header">
  <h1>المقياس</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>الوصف:</strong></dt>
  <dd><%= @criterion_detail.description %></dd>
  <dt><strong>الوزن:</strong></dt>
  <dd><%= @criterion_detail.weight %></dd>
  <dt><strong>المعيار:</strong></dt>
  <dd><%= @criterion_detail.criterion_id %>-<%= Criterion.find(@criterion_detail.criterion_id).description %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              criterions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_criterion_criterion_detail_path(@criterion_detail.criterion_id, @criterion_detail.id), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              criterion_criterion_detail_path(@criterion_detail.id, @criterion_detail.criterion_id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

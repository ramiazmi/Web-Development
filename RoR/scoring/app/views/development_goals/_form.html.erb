<%= form_for @development_goal, :html => { :class => "form-horizontal development_goal" } do |f| %>

    <% if @development_goal.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@development_goal.errors.count, "error") %> prohibited this development_goal from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @development_goal.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%= error_span(@development_goal[:description]) %>
  </div>
  <% if @development_goal.persisted? %>
    <div class="control-group">
      <div class="form-group col-xs-12 col-sm-12">
        <%= f.label "فعال", class: 'control-label no-padding-right' %>
          <%= f.check_box :is_active %>
      </div>
      <%= error_span(@development_goal[:is_active]) %>
    </div>
  <% end %>

  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            development_goals_path, :class => 'btn btn-default' %>

<% end %>

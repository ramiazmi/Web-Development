<%- model_class = DevelopmentGoal -%>
<div class="jumbotron">
    <h2 style="font-family: 'Droid Arabic Kufi';">الأهداف التنموية</h2>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>الوصف</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @development_goals.each do |development_goal| %>
      <tr>
        <td><%= link_to development_goal.description, development_goal_path(development_goal) %></td>
        <td>
          <%= link_to edit_development_goal_path(development_goal) do %>
          <i class="fa fa-edit fa-lg"></i>
          <% end %>
          &nbsp;&nbsp;&nbsp;  
          <%= link_to development_goal_path(development_goal),
                      :class => 'trash',
                      :method => :delete, 
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                      <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_development_goal_path,
            :class => 'btn btn-info'  do %>
            إضافة هدف تنموي جديد 
        <i class="fa fa-plus-circle"></i>
<% end %>   


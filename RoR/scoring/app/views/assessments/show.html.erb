<%- model_class = Assessment -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mark) %>:</strong></dt>
  <dd><%= @assessment.mark %></dd>
  <dt><strong><%= model_class.human_attribute_name(:proposal_id) %>:</strong></dt>
  <dd><%= @assessment.proposal_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:category_id) %>:</strong></dt>
  <dd><%= @assessment.category_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:criterion_id) %>:</strong></dt>
  <dd><%= @assessment.criterion_id %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              assessments_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_assessment_path(@assessment), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              assessment_path(@assessment),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

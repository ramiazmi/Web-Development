<% current_user_type = current_user.user_type %>        
        <%= render partial: 'layouts/header' %>
        <div class="wrapper row-offcanvas row-offcanvas-left">
            <% if current_user.is_admin? %>
            <%= render partial: 'layouts/sidebar' %>
            <!-- Right side column. Contains the navbar and content of the page -->
            <aside class="right-side">
                <!-- Main content -->
                <section class="content">
                            <% if notice %>
                              <div id="flash_notice" class="alert alert-success alert-dismissable">
                                <i class="fa fa-check"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <b><%= notice %></b>
                              </div>
                            <% end %>

                            <% if alert and alert.size > 0 and alert != [""] %>
                              <div id="flash_notice" class="alert alert-danger alert-dismissable">
                                <i class="fa fa-ban"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <b><%= alert if alert.size > 0 and alert != [""] %></b>
                              </div>
                            <% end %>
                    <%= yield %>
                </section><!-- /.content -->
            </aside><!-- /.right-side -->
            <% else %>
            <section class="content">
                            <% if notice %>
                              <div id="flash_notice" class="alert alert-success alert-dismissable">
                                <i class="fa fa-check"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <b><%= notice %></b>
                              </div>
                            <% end %>

                            <% if alert and alert.size > 0 and alert != [""] %>
                              <div id="flash_notice" class="alert alert-danger alert-dismissable">
                                <i class="fa fa-ban"></i>
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                <b><%= alert  if alert.size > 0 and alert != [""]  %></b>
                              </div>
                            <% end %>
                    <%= yield %>
                </section><!-- /.content -->
            <% end %>
        </div><!-- ./wrapper -->

<div class="container">    
        <div id="signupbox" style="margin-top:50px;float:right; font-size: 85%; position: relative; top:-10px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title" style="text-align: center; font-family: 'Droid Arabic Kufi'; font-size: 18px;">تعديل ملف مستخدم التقييم</div>
                           
                        </div>  
                        <div class="panel-body" >

                        <%= simple_form_for(@user, url: update_user_path(@user), html: { method: :put, :class => "form-horizontal grant" }) do |f| %>
                            <%= f.error_notification %>
                                
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>
                                      <ul>
                                        <% @user.errors.full_messages.each do |msg| %>
                                          <li><%= msg %></li>
                                        <% end %>
                                      </ul>
                                    </p>
                                    <span></span>
                                </div>

                                <div class="form-group">
                                    <label for="user_name" class="col-md-3 control-label">اسم المستخدم</label>
                                    <div class="col-md-9">
                                        <%= f.text_field :user_name, autofocus: true, class: "form-control", placeholder: "Enter User Full Name", required: true, style: "text-align: center;" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label for="email" class="col-md-3 control-label">البريد الإلكتروني</label>
                                    <div class="col-md-9">
                                      <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", required: true, style: "text-align: center;" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Button -->                                        
                                    <div class="col-md-offset-3 col-md-9">

                                        <%= f.submit "Sign up", value: "حفظ", class: "btn btn-info btn-lg", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>
                                        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                                            admin_users_path, :class => 'btn btn-default btn-lg', style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %> 
                                    </div>
                                </div>
                                <div class="actions">
                                </div>   
                            <% end %>
                         </div>
                    </div>



                    <div class="panel panel-info">
                        <div class="panel-heading">
                            <div class="panel-title" style="text-align: center; font-family: 'Droid Arabic Kufi'; font-size: 18px;">Reset User Password</div>
                           
                        </div>  
                        <div class="panel-body" >

                        <%= simple_form_for(@user, url: update_user_path(@user), html: { method: :put, :class => "form-horizontal grant" }) do |f| %>
                            <%= f.error_notification %>
                                
                                <div id="signupalert" style="display:none" class="alert alert-danger">
                                    <p>
                                      <ul>
                                        <% @user.errors.full_messages.each do |msg| %>
                                          <li><%= msg %></li>
                                        <% end %>
                                      </ul>
                                    </p>
                                    <span></span>
                                </div>

                                <div class="form-group">
                                    <label for="password" class="col-md-3 control-label">كلمة المرور الجديدة</label>
                                    <div class="col-md-9">
                                      <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", style: "text-align: center;" %>              
                                    </div>
                                </div>         
                                <div class="form-group">
                                    <label for="password_confirmation" class="col-md-3 control-label">تأكيد كلمة المرور</label>
                                    <div class="col-md-9">
                                      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password", required: true, style: "text-align: center;"  %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <!-- Button -->                                        
                                    <div class="col-md-offset-3 col-md-9">

                                        <%= f.submit "Sign up", value: "Reset", class: "btn btn-danger btn-lg", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>

                                        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                                            admin_users_path, :class => 'btn btn-default btn-lg', style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %> 
                                    </div>
                                </div>
                                <div class="actions">
                                </div>   
                            <% end %>
                         </div>
                    </div>
               
               
                
         </div> 
    </div>

    
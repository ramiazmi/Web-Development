<%- model_class = Province -%>
<div class="jumbotron">
    <h2>المحافظات</h2>
</div>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>اسم المحافظة</th>
      <th>جيوب الفقر</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @provinces.each do |province| %>
      <tr>
        <td><%= link_to province.name, province_path(province) %></td>
        <td><%= province.poverty_mapping %></td>
        
        <td>
          <%= link_to edit_province_path(province) do %>
          <i class="fa fa-edit fa-lg"></i>
          <% end %>
          &nbsp;&nbsp;&nbsp;  
          <%= link_to province_path(province),
                      :class => 'trash',
                      :method => :delete, 
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } do %>
                      <i class="fa fa-trash-o fa-lg"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


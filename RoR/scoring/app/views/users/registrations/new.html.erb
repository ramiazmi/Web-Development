<br/>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="container">
          <div class="row centered-form">
          <div class="col-lg-3 ">
          </div>
          <div class="col-lg-6 ">
              <div class="panel panel-info">
                  <div class="panel-heading">
                         <h2>تسجيل مستخدم</h2>
                    
                  </div>
  <div class="panel-body">
      <% if @user.errors.any? %>
          <div id="error_expl" class="panel panel-danger">
            <div class="panel-heading">
              <h3 class="panel-title"><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h3>
            </div>
            <div class="panel-body">
              <ul>
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          </div>
      <% end %>   

    <div>
     <span style="color: red; font-size: 19px;">ملاحظة: هذه الصفحة مخصصة لمقدمي المقترحات فقط</span>
    </div>  
    <div class="form-group">
                  <%= f.label :user_name, value: "اسم مقدم المقترح" %>
                  <div class="input-group"> <span class="input-group-addon"><span class="fa fa-user"></span></span>
                    <%= f.text_field :user_name, autofocus: true, class: "form-control", placeholder: "Enter Username", value: "", required: true, style: "text-align: center;" %>
      </div>
    </div>

    <div class="form-group">
      <label>البريد الإلكتروني</label>
      <div class="input-group"> <span class="input-group-addon"><span class="fa fa-envelope"></span></span>
                    <%= f.email_field :email, class: "form-control", placeholder: "Enter Email", value: "", required: true, style: "text-align: center;" %>
      </div>
    </div>

      <div class="form-group">
                  <label>كلمة المرور     <% if @validatable %>
      (<%= @minimum_password_length %> خانات على الأقل)
      <% end %></label>
                  <div class="input-group"> <span class="input-group-addon"><span class="fa fa-lock"></span></span>

        <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", 'data-toggle' => "popover", title: "Password Strength", 'data-content' => "Enter Password...", style: "text-align: center;" %>
      </div>
    </div>

    <div class="form-group">
                  <label>تأكيد كلمة المرور</label>
                  <div class="input-group"> <span class="input-group-addon"><span class="fa fa-arrows-v"></span></span>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password", required: true, style: "text-align: center;"  %>
    </div>  
    </div>


    <div class="actions">
      <%= f.submit "Sign up", value: "حفظ", class: "btn btn-lg btn-primary btn-block", style: "font-family: 'Droid Arabic Kufi'; font-size: 15px" %>
    </div>

    </div>
    </div>
    </div>
    
    <div class="col-lg-3 ">
    </div>

   </div>

   </div>

 <% end %>

<%= simple_form_for @locality, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :locality_code %>
  <%= error_span(@locality[:locality_code]) %>
  <%= f.input :locality_name %>
  <%= error_span(@locality[:locality_name]) %>
  <%= f.input :population %>
  <%= error_span(@locality[:population]) %>
  <%= f.input :province_id %>
  <%= error_span(@locality[:province_id]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                localities_path, :class => 'btn btn-default' %>
<% end %>

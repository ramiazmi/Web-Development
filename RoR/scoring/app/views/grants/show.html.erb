<%- model_class = Grant -%>
<div class="page-header">
  <h1>المنحة</h1>
</div>

<dl class="dl-horizontal">
  <dt><strong>الوصف:</strong></dt>
  <dd><%= @grant.description %></dd>
  <dt><strong>الميزانية:</strong></dt>
  <dd>$<%= @grant.budget %></dd>
  <dt><strong>بدء موعد تقديم المقترحات:</strong></dt>
  <dd><%= @grant.starting_at %></dd>
  <dt><strong>آخر موعد لتقديم المقترحات:</strong></dt>
  <dd><%= @grant.closing_at %></dd>
  <dt><strong>فعالة:</strong></dt>
  <dd><%= @grant.is_active? ? "نعم" : "لا" %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              grants_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_grant_path(@grant), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              grant_path(@grant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
